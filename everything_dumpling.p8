function _init()
   palt(0,false) --turn off black transparency
   palt(12,true) --turn on blue transparency

   --player
   player = {}
   player.x = 64
   player.y = 64
   player.sprite = 1 --current sprite
   player.left = false
   --size in pixels
   player.width = 8
   player.height = 6
   player.size = 1
   --sprite ids
   player.norm_spr = 1
   player.eat_spr = 2
   --values
   player.speed = 0.5
   
   --enemy
   enemy = {} --list of enemies
   enemy.num_types = 1
   enemy.sprite = {3} --sprite ids
   enemy.onscreen_lim = 5
   spawn_timer = time()
end

function _update60()
   player_move()
   can_eat()
   enemy_move()
   enemy_spawn()
end

function _draw()
   cls(12)
   draw_player()
   draw_enemies()
end
